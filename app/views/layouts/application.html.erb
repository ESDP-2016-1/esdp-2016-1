<!DOCTYPE html>
<html>

<head>
  <title>IMHO</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <!-- Flash block -->

  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <a href="#" data-dismiss="alert" class="close">×</a>
        <ul>
          <% if value.is_a?(Array) %>
            <% value.each do |subvalue| %>
            <li>
              <%= subvalue %>
            </li>
            <% end %>
          <% else %>
              <li>
                <%= value %>
              </li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <!-- END Flash block -->


  <!-- NavBar block -->

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <p class="navbar-brand" title="imho.kg">
          <%= link_to image_tag('logo.png', style: "max-width:100px; margin-top: -7px;"), root_path %>
        </p>
      </div>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li><a href="#">About</a></li>
          <li><a href="#">Contacts</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
              <p class="navbar-text">
                Привет, <%= link_to current_user.name, edit_profile_path, class: 'navbar-link' %>
              </p>

              <ul class="nav navbar-nav">
                <li>
                  <div class="menu_avatar_block"><%= link_to image_tag(current_user.avatar.url(:thumb), class: "menu_user_avatar"), profile_path(current_user)%>
                  </div>
                </li>

                <li class="dropdown">
                  <div class="menu_avatar_dropdown_block">
                    <a class="dropdow-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-triangle-bottom"></span></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to 'Редактирование профиля', edit_profile_path %></li>
                      <li class="divider"></li>
                      <li><%= link_to 'Выйти', destroy_user_session_path, method: :delete %></li>
                    </ul>
                  </div>
                </li>
              </ul>

          <% else %>
              <%= link_to 'Войти', "#sign_in", "data-toggle" => "modal", 'data-target' => '#sign_in_modal', class: 'btn btn-primary navbar-btn' %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- NavBar END -->


  <!-- SignIn block -->

  <div class="modal" id="sign_in_modal" >
    <div class="sign_in">
      <%= form_for(user_resource, as: user_resource_name, url: session_path(user_resource_name), html:{id: 'sign_in_user', 'data-type' => 'json'}) do |f| %>

          <div class="field">
            <span class="sign_in_email"><%= f.label :email, "Эл.почта :" %></span>
            <%= f.email_field :email, autofocus: true, class: "sign_in_email_field"  %>
          </div>

          <div class="field">
            <span class="sign_in_password"><%= f.label :password, "Пароль :"%></span>
            <%= f.password_field :password, autocomplete: "off", class: "sign_in_password_field" %>
          </div>

          <div class="field sign_in_enter">
            <%= link_to "Забыли пароль?", new_user_password_url %>
            <div class="actions">
              <%= f.submit "Вход", class: "btn btn-primary" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
              <div class="field sign_in_rememberme">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
          <% end %>

      <% end %>

      <div class="field sign_in_with">
        <span>Войти с помощью</span>
      </div>

      <div class="sign_in_with_social_icons">
        <%= image_tag("socialnetwork/vk.png", size: "48x48") %>
        <%= image_tag("socialnetwork/ok.png", size: '48x48') %>
        <%= image_tag("socialnetwork/twitter.png", size: '48x48') %>
        <%= image_tag("socialnetwork/google.png", size: '48x48') %>
        <%= image_tag("socialnetwork/facebook.png", size: '48x48') %>
        <%= image_tag("socialnetwork/mailru.png", size: '48x48') %>
      </div>

      <div class="actions">
        <div class="row">
          <div class="col-xs-1"></div>
          <button class="btn btn-primary col-xs-4" data-dismiss="modal">Отмена</button>
          <div class="col-xs-2"></div>
          <%= link_to "Регистрация", "#sign_up", "data-toggle" => "modal", 'data-target' => '#sign_up_modal', 'data-dismiss' => 'modal', class: "btn btn-primary col-xs-4" %>
          <div class="col-xs-1"></div>
        </div>
      </div>

    </div>
  </div>

  <!-- SignIn END -->


  <!-- SignUp block -->

  <div class="modal" id="sign_up_modal">


    <div class="sign_up">

      <h4>Регистрация</h4>

      <%= form_for(user_resource, as: user_resource_name, url: registration_path(user_resource_name), html:{id: 'sign_up_user', :'data-type' => 'json'}) do |f| %>

          <div class="field">
            <span class="sign_up_name"> <%= f.label :name, "Имя пользователя:" %></span>
            <%= f.text_field :name, autofocus: true %>
            <%= render 'shared/error_msg', object: user_resource, field_name: :name %>
          </div>

          <div class="field">
            <span class="sign_up_email"> <%= f.label :email, "Эл.почта :"  %></span>
            <%= f.email_field :email %>
          </div>

          <div class="field">
            <span class="sign_up_password"><%= f.label :password, "Пароль :" %></span>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <div class="field">
            <span class="sign_up_password_confirm"><%= f.label :password_confirmation, "Подтвердите пароль :" %></span>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="actions">
            <div class="row">
              <button class="btn btn-primary col-xs-4" data-dismiss="modal">Отмена</button>

              <%= f.submit "Зарегистрировать", class: "btn btn-primary col-xs-6 col-xs-offset-2" %>

            </div>
          </div>
      <% end %>

    </div>

  </div>

  <!-- SignUp END -->


  <!-- SideBar(Catalogue) block -->

  <div id="mySidenav" class="sidenav">
    <nav class="navmenu navmenu-inverse" role="navigation">

      <ul class="nav navmenu-nav">

        <% helper_get_all_categories.each do |category| %>

            <% if category.subcategories.present? %>

                <li class="dropdown">
                  <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
                    <%= category.title %><b class="caret"></b>
                  </a>

                  <ul class="dropdown-menu navmenu-nav" role="menu">

                  <% category.subcategories.each do |subcategory| %>

                        <li><%= link_to subcategory.title, categories_path(subcategory.id)  %></li>

                  <% end %>

                  </ul>
                </li>

            <% end %>
        <% end %>
      </ul>
    </nav>
  </div>

  <!-- SideBar(Catalogue) END -->




  <!-- BODY block -->

	<div class="container-fluid">
	
	  <%= yield %>

	</div>

  <!-- BODY END -->




  <!-- FOOTER block -->

  <!-- FOOTER END -->

  <!-- JAVASCRIPT: Draw Modal SignIn IF /sign_in -->

  <% if defined?(@data[:act]) %>

    <script type="text/javascript">

    <% case @data[:act] %>
      <% when 'sign_in' %>
        $('#sign_in_modal').modal({show:true});
      <% when 'register' %>
        $('#sign_up_modal').modal({show:true});
      <% else %>

    <% end %>

    </script>

  <% end %>


</body>

</html>
