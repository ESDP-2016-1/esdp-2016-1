<%= form_for ucomment, html: {class: 'form-horizontal'} do |f| %>
    <br>
    <br>

    <div class="field text-area">
      <%= f.label :body %><br>
      <%= f.text_area :body, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>



    <div>
      <%= f.submit class:'btn btn-primary' %>
    </div>
<% end %>
