<% form_tag('/something', id: 'hidden_form', method: :post) do %>
  <input type="hidden" id="comment_type" name="id" value="" />
  <input type="hidden" id="texens" name="user" value="texens" />
<% end %>


<div id="search_result_box" class="search-box">
  <div id="search_content">
    <!-- CONTENT FOR CHANGING -->
  </div>
  <div id="search_status" >
    <!-- STATUS FOR BOX -->
  </div>
</div>
<div class="text-center">
  <h3>Добавление нового отзыва</h3>
</div>

<div class="col-md-1"></div>
<div class="container col-md-9 text-center">


  <div class="col-md-12">
    <div class="col-md-2 text-right"></div>
    <div class="col-md-10">
      <div class="btn-group btn-group-justified ">
        <div class="btn-group">
          <button id="positive" type="button" class="btn btn-default positive-negative-select">Положительный</button>
        </div>
        <div class="btn-group">
          <button id="negative" type="button" class="btn btn-default positive-negative-select">Отрицательный</button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="col-md-2 text-right">
      <label>Компания:</label>
    </div>
    <div class="col-md-10">
      <div id="company_name_div">
        <input id="company_name" type="text" class="form-control">
      </div>
    </div>
  </div>

  <div class="col-md-12">
    <div class="col-md-2"></div>
    <div id="company_card_show" class="invisible_content text-center col-md-10"></div>
  </div>

    <div class="col-md-12">
      <div class="col-md-2 text-right">
        <label>Оценка компании:</label>
      </div>
      <div id="stars_show" class="col-md-10 text-left">
      </div>
    </div>

    <div id="input_block" class="col-md-12">

      <div>
          <div class="col-md-2 text-right">
            <label for="msg_title">Тема:</label>
          </div>
          <div class="form-group col-md-10 text-left">
            <input type="text" class="form-control input-values msg-title" id="msg_title">
          </div>
      </div>

      <div>
          <div class="col-md-2 text-right">
            <label for="msg_content">Коментарий:</label>
          </div>
          <div class="form-group text-left col-md-10">
            <textarea class="form-control input-values msg-content" id="msg_content" rows="5"></textarea>
          </div>
      </div>

      <div>
          <div class="col-md-2"></div>
          <div class="checkbox col-md-10 text-left">
            <label><input type="checkbox" value=""> Анонимный коментарий</label>
          </div>
      </div>

    </div>
</div>
<div class="col-md-2"></div>