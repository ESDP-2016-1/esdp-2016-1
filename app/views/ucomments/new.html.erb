<%= form_for :add, as: :post, url: verify_comment_url, html: {multipart: true, id: 'hidden_form' } do |frm| %>
  <%= frm.hidden_field :user_id, value: @data[:id] %>
  <%= frm.hidden_field :company_id, data: 'company_id', value: -1 %>
  <%= frm.text_field :comment_title, data: 'msg_title', style: 'visibility:hidden' %>
  <%= frm.text_area  :comment_body,  data: 'msg_content', style: 'visibility:hidden' %>
  <%= frm.hidden_field :comment_rate, data: 'msg_rate', style: 'visibility:hidden' %>
  <%= frm.hidden_field :comment_anonymous, value: 0, data:'msg_anonymous' %>
  <%= frm.file_field :image1, class: 'input-select-image', 'data-id' => '1', style: 'visibility:hidden' %>
  <%= frm.file_field :image2, class: 'input-select-image', 'data-id' => '2', style: 'visibility:hidden' %>
  <%= frm.file_field :image3, class: 'input-select-image', 'data-id' => '3', style: 'visibility:hidden' %>
  <%= frm.file_field :image4, class: 'input-select-image', 'data-id' => '4', style: 'visibility:hidden' %>
  <%= frm.file_field :image5, class: 'input-select-image', 'data-id' => '5', style: 'visibility:hidden' %>
<% end %>

