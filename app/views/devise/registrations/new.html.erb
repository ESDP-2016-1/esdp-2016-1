<center><h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Имя %><br />
    <%= f.text_field :name, autofocus: true %>
    <%= render 'shared/field_errors', object: resource, field_name: :name %>
  </div>

  <div class="field">
    <p><%= f.label :email %><br />
    <%= f.email_field :email %>
    <%= render 'shared/field_errors', object: resource, field_name: :email %>
    </p>

  </div>

  <div class="field">
    <p><%= f.label :Пароль %>
    <% if @minimum_password_length %>
    <em>(минимум <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <%= render 'shared/field_errors', object: resource, field_name: :password %>
    </p>
  </div>

  <div class="field">
    <p><%= f.label :Подтверждение_пароля %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <%= render 'shared/field_errors', object: resource, field_name: :password_confirmation %>
    </p>
  </div>

  <div class="actions">
    <p class="text-center"><%= f.submit "Зарегистрироваться" %></p>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</center>
