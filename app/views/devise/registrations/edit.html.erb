<center>

<h2>Изменение профиля <%#= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="field">
      <%= f.label :Имя %><br />
      <%= f.text_field :name, autofocus: true %>
      <%= render 'shared/field_errors', object: resource, field_name: :name %>
    </div>

    <div class="field"><br />
      <%= f.file_field :avatar %><br />
      <%= render 'shared/field_errors', object: resource, field_name: :avatar %>

    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email %>
      <%= render 'shared/field_errors', object: resource, field_name: :email %>
    </div>

    <div class="field">
      <%= f.label "Дата рождения", :class=>'singleline' %><br />
      <%= f.date_select :dob, {:include_blank => true, :default => nil, :start_year => 1950, :end_year => 2010 } %>
    </div>

    <div class="field">
      <%= f.label :Пол %><br />
      <%= f.select :sex, [["N/A", nil], ["Мужской", true], ["Женский", false]] %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :Пароль %> <i>(Пропустите если не хотите менять пароль)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <%= render 'shared/field_errors', object: resource, field_name: :password %>
    </div>

    <div class="field">
      <%= f.label :Подтверждение_пароля %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <%= render 'shared/field_errors', object: resource, field_name: :password_confirmation %>
    </div>

    <div class="field">
      <%= f.label :Текущий_пароль %> <i>(Введите текущий пароль для подтверждения изменения)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
      <%= render 'shared/field_errors', object: resource, field_name: :current_password %>
    </div>

    <div class="actions">
      <%= f.submit "Обновить" %>
    </div>
<% end %>

    <h3>Удаление аккаунта</h3>

    <p>Unhappy? <%= button_to "Удалить", registration_path(resource_name), data: { confirm: "Вы хотите удалить свой профиль? Восстановить его будет невозомжно. " }, method: :delete %></p>

    <%= link_to "Назад", :back %>
</center>
