<h2><p class="text-center">Авторизация</p></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<center>
  <div class="field">
    <p class="text-center"><%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %></p>
  </div>

  <div class="field">
    <p class="text-center"><%= f.label :пароль %><br />
    <%= f.password_field :password, autocomplete: "off" %></p>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <p class="text-center"><%= f.check_box :remember_me %>
      <%= f.label :запомнить_пароль %></p>
    </div>
  <% end -%>

  <div class="actions">
    <p class="text-center"><%= f.submit "Войти" %></p>
  </div>
<% end %></p>

<%= render "devise/shared/links" %>
</center>
