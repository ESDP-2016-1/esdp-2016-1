<div class="sign_in">

<%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
  <div class="field">
    <span class="sign_in_email"><%= f.label :email, "Эл.почта :" %></span>
    <%= f.email_field :email, autofocus: true, class: "sign_in_email_field"  %>
  </div>

  <div class="field">
    <span class="sign_in_password"><%= f.label :password, "Пароль :"%></span>
    <%= f.password_field :password, autocomplete: "off", class: "sign_in_password_field" %>
  </div>

  <div class="field sign_in_enter">
    <%= link_to "Забыли пароль?", new_password_path(resource_name) %>
      <div class="actions">
        <%= f.submit "Вход", class: "btn btn-primary" %>
      </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field sign_in_rememberme">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

<% end %>

<div class="field sign_in_with">
  <span>Войти с помощью</span>
</div>

<div class="sign_in_with_social_icons"> 
 <%= image_tag("socialnetwork/vk.png", size: "48x48") %>
  <%= image_tag("socialnetwork/ok.png", size: '48x48') %>
  <%= image_tag("socialnetwork/twitter.png", size: '48x48') %>
  <%= image_tag("socialnetwork/google.png", size: '48x48') %>
  <%= image_tag("socialnetwork/facebook.png", size: '48x48') %>
  <%= image_tag("socialnetwork/mailru.png", size: '48x48') %>
</div>

<div class="field">
  <%= link_to "Регистрация", new_registration_path(resource_name), class: "btn btn-primary" %>
</div> 


</div>

